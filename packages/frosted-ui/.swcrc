{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "target": "es2022",
    "loose": false,
    "minify": {
      "compress": false,
      "mangle": false
    },
    "transform": {
      "optimizer": {
        "globals": {
          "vars": {
            "React": "require(\"react\")"
          }
        }
      }
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": false,
  "isModule": true,
  "exclude": ["\\.stories\\.tsx", "\\.d\\.ts", "\\.js"]
}
