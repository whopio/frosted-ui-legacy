    "declarationMap": false,
    "downlevelIteration": true,
    "target": "ESNEXT",
    "module": "ESNext",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.stories.tsx"
  ]
}